
## import raylib from "../bin/raylib.dll"
import ^bin.raylib as rl


# Initialization
#--------------------------------------------------------------------------------------
screenWidth = 800
screenHeight = 450

rl.InitWindow(screenWidth, screenHeight, "raylib [core] example - mouse input");

ballPosition = rl.Vector2( -100.0, -100.0)
ballColor = rl.DARKBLUE

rl.SetTargetFPS(60);               # Set our game to run at 60 frames-per-second
#---------------------------------------------------------------------------------------

# Main game loop
while (!rl.WindowShouldClose())    # Detect window close button or ESC key

  # Update
  #----------------------------------------------------------------------------------
  ballPosition = rl.GetMousePosition();

  if (rl.IsMouseButtonPressed(rl.MOUSE_BUTTON_LEFT))      then ballColor = rl.MAROON
  elif (rl.IsMouseButtonPressed(rl.MOUSE_BUTTON_MIDDLE))  then ballColor = rl.LIME
  elif (rl.IsMouseButtonPressed(rl.MOUSE_BUTTON_RIGHT))   then ballColor = rl.DARKBLUE
  elif (rl.IsMouseButtonPressed(rl.MOUSE_BUTTON_SIDE))    then ballColor = rl.PURPLE
  elif (rl.IsMouseButtonPressed(rl.MOUSE_BUTTON_EXTRA))   then ballColor = rl.YELLOW
  elif (rl.IsMouseButtonPressed(rl.MOUSE_BUTTON_FORWARD)) then ballColor = rl.ORANGE
  elif (rl.IsMouseButtonPressed(rl.MOUSE_BUTTON_BACK))    then ballColor = rl.BEIGE
  end
  #----------------------------------------------------------------------------------

  # Draw
  #----------------------------------------------------------------------------------
  rl.BeginDrawing();

    rl.ClearBackground(rl.RAYWHITE);

    rl.DrawCircleV(ballPosition, 40, ballColor);

    rl.DrawText("move ball with mouse and click mouse button to change color", 10, 10, 20, rl.DARKGRAY);

  rl.EndDrawing();
  #----------------------------------------------------------------------------------
end

# De-Initialization
#--------------------------------------------------------------------------------------
rl.CloseWindow();        # Close window and OpenGL context
#--------------------------------------------------------------------------------------
